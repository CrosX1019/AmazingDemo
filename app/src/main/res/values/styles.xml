<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- baseTitle字体样式 -->
    <style name="BaseTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fff</item>
        <item name="layout_textSizePercent">50%</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- title左侧图片 -->
    <style name="BaseTitleLeftIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/ic_launcher_round</item>
        <item name="layout_marginLeftPercent">5%w</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
